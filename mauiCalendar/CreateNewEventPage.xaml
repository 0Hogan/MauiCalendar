<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiCalendar.CreateNewEventPage"
             Title="CreateNewEventPage"
             xmlns:viewmodel="clr-namespace:mauiCalendar.ViewModel"
             x:DataType="viewmodel:CalendarViewModel"
             xmlns:model="clr-namespace:mauiCalendar.Models">
    <VerticalStackLayout >
        <Label Text="Event Name" />
        <Entry x:Name="Name"
       Placeholder="Enter Event Name"
        />

        <Label Text="Event Start Time" />
        <DatePicker x:Name="SsTime"/>
        <TimePicker x:Name="StTime" />

        <Label Text="Event End Time" />
       
    
        <DatePicker x:Name="EeTime"/>
        <TimePicker x:Name="EtTime" />

        <Label Text="Event Location" />
        <Entry x:Name="Location"
       Placeholder="Enter Event Location"
        />

        <Label Text="Event Notes" />
        <Entry x:Name="Notes"
       Placeholder="Enter Event Notes"
       />

        <Label Text="Event Category ID Number" />
        <Entry x:Name="CatID"
       Placeholder="Enter Event ID (Number)"/>

        <Button Text="Create Event"  Clicked="Button_Clicked" />


    </VerticalStackLayout>
</ContentPage>